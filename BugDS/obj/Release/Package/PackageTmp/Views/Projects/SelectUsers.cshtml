@model BugDS.Models.ProjectsViewModel

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<body>
    <div class="login-wrapper">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Update Project</div>
                <div class="panel-body">
                    <form action="@Url.Action("SelectUsers","Projects")" method="post" class="form-horizontal">
                        @Html.HiddenFor(m => m.Project.Id)
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Name</label>
                            <div class="col-lg-10">
                                @Html.DisplayFor(m => m.Project.Name)
                            </div><!-- /.col -->
                        </div><!-- /form-group -->
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Users</label>
                            <div class="col-lg-10">
                                @Html.ListBox("SelectedUsers", Model.Users, new { @class = "chosen-select" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-success btn-sm">Update</button>
                            </div><!-- /.col -->
                        </div><!-- /form-group -->
                    </form>
                </div>
            </div><!-- /panel -->
        </div><!-- /.col -->
    </div>
</body>


@section scripts{
    <script type="text/javascript">
        $(".chosen-select").chosen(
            )
    </script>
}

