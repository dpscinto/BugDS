@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Bug Detective</title>

    <!-- CSS -->
    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen">

    <!-- Owl Carousel -->
    <link href="~/Content/owl.theme.css" rel="stylesheet">
    <link href="~/Content/owl.carousel.css" rel="stylesheet">

    <!-- Simple text rotator -->
    <link href="~/Content/simpletextrotator.css" rel="stylesheet">

    <!-- Font Awesome CSS -->
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" media="screen">

    <!-- Animate css -->
    <link href="~/Content/animate.css" rel="stylesheet">

    <!-- Custom styles CSS -->
    <link href="~/Content/style.css" rel="stylesheet" media="screen">

    <link rel="icon"
          type="image/png"
          href="~/images/favicon-bug.ico" />
</head>

<body>

    <div class="wrapper">

        <!-- Preloader -->

        <div id="preloader">
            <div id="status">
                <div class="status-mes"><h4>Bug Detective</h4></div>
            </div>
        </div>

        <!-- Navigation start -->

        <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
            <div class="container">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="~/Home"><i class="fa fa-search"></i><span>  </span>Bug Detective</a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#intro">Home</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Dashboard", "Dashboard", "Home")</li>
                        }
                        <li><a href="#about">About</a></li>
                        <li><a target="_blank" href="#callout">Contact</a></li>
                        <li>@Html.Partial("_LoginPartial2")</li>
                    </ul>
                </div>

            </div>
        </nav>

        <!-- Navigation end -->
        <!-- Intro section start -->

        <section id="intro" class="section">

            <div class="container">

                <div class="row">

                    <div class="col-md-12">

                        <div class="hello wow bounceInDown">
                            <h1>Bug Detective</h1>
                            <h3><span class="rotate">HTML5, CSS3, JavaScript | Bootstrap | ASP.NET | MVC | C#</span></h3>
                        </div>

                        <a href="#about">
                            <div class="mouse-icon">
                                <div class="wheel"></div>
                            </div>
                        </a>

                    </div>

                </div><!-- .row -->

            </div><!-- .container -->

        </section>

        <!-- Intro section end -->
        <!-- About Section -->
        <section id="about" class="content-section text-center">
            <div class="container">
                <div class="col-lg-8 col-lg-offset-2">
                    <h2>About Bug Detective</h2>
                </div>
                <div class="col-md-4">
                    <img width="200" height="200" src="~/images/html.png" />
                    <br />
                    <p>I used HTML5, CSS3, and JavaScript to structure and style the front-end of my blog with help from a Bootstrap template.</p>
                </div>
                <div class="col-md-4">
                    <br />
                    <img width="200" height="200" src="~/images/asp.jpg">
                    <br />
                    <br />
                    <br />
                    <p>An ASP.NET MVC project is the framework used to build, test, and publish the personal financial portal.</p>
                </div>
                <div class="col-md-4">
                    <img width="180" height="200" src="~/images/clogo.png">
                    <br />
                    <p>C# is the object-oriented programming language used to structure and design this project.</p>
                </div>

                <div class="col-lg-8 col-lg-offset-2">
                    <p>You can check out my code on GitHub.</p>
                    <a href="https://github.com/dpscinto/BudgetDS" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-github fa-fw"></i> <span class="network-name">GitHub</span></a>
                </div>
            </div>
        </section>
        <!-- Callout section start -->

        <section id="callout" class="callout">

            <div class="container">

                <div class="row">

                    <div class="col-md-3 hidden-xs wow bounceInLeft">
                        <h3>Contact Me</h3>

                    </div>

                    <div class="col-md-9 headline nomargin wow bounceInDown">
                        <h3>I'm currently available for freelance work.</h3>
                        <p>Feel free to email me to provide some feedback, suggestions, employment, or to just say hello!</p>

                        <ul class="list-inline banner-social-buttons">
                            <li>
                                <a target="_blank" href="mailto:dpscinto@gmail.com" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-paper-plane-o icon-before"></i> Email</a>
                            </li>
                            <li>
                                <a target="_blank" href="https://twitter.com/dpscinto" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Twitter</span></a>
                            </li>
                            <li>
                                <a target="_blank" href="https://www.facebook.com/dpscinto" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span></a>
                            </li>
                            <li>
                                <a target="_blank" href="https://www.linkedin.com/in/danielscinto" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-linkedin fa-fw"></i> <span class="network-name">LinkedIn</span></a>
                            </li>
                            <li>
                                <a target="_blank" href="http://dscinto.azurewebsites.net/#portfolio" class="btn btn-default btn-custom-2 callout-btn"><i class="fa fa-tree fa-fw"></i><span class="network-name">Portfolio</span></a>
                            </li>
                        </ul>

                    </div>

                </div><!-- .row -->

            </div><!-- .container -->

        </section>

        <!-- Callout section end -->
        <!-- Footer start -->

        <footer id="footer">

            <div class="container">

                <div class="row">

                    <div class="col-md-12">
                        <p class="copy">
                            © 2016 Dan Scinto, All Rights Reserved.
                        </p>
                    </div>

                </div><!-- .row -->

            </div><!-- .container -->

        </footer>

        <!-- Footer end -->
    </div><!-- .wrapper -->
</body>
</html>

<!-- Javascript files -->
<!-- jQuery -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<!-- Bootstrap JS -->
<script src="~/Scripts/bootstrap.min.js"></script>
<!-- Background slider -->
<script src="~/Scripts/jquery.backstretch.min.js"></script>
<!-- OwlCarousel -->
<script src="~/Scripts/owl.carousel.min.js"></script>
<!-- Text rotator -->
<script src="~/Scripts/jquery.simple-text-rotator.min.js"></script>
<!-- Waypoints -->
<script src="~/Scripts/waypoints.min.js"></script>
<!-- WOW - Reveal Animations When You Scroll -->
<script src="~/Scripts/wow.min.js"></script>
<!-- Smooth scroll -->
<script src="~/Scripts/smoothscroll.js"></script>
<!-- Custom scripts -->
<script src="~/Scripts/custom.js"></script>
