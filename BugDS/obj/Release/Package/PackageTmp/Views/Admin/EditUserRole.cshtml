@model BugDS.Models.AdminUserViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Edit User Roles</div>
            <div class="panel-body">
                <form action="@Url.Action("EditUserRole","Admin")" method="post" class="form-horizontal">
                    @Html.HiddenFor(m => m.User.Id)
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Name</label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(m => m.User.FullName)
                        </div><!-- /.col -->
                    </div><!-- /form-group -->
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            @Html.DisplayFor(m => m.User.Email)
                        </div><!-- /.col -->
                    </div><!-- /form-group -->
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Roles</label>
                        <div class="col-lg-10">
                            @Html.ListBox("SelectedRoles", Model.Roles, new { @class = "chosen-select" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-4 col-lg-10">
                            <button type="submit" class="btn btn-success">Update</button>
                            @Html.ActionLink("Cancel", "Index", "Admin", null, new { @class = "btn btn-danger" })
                        </div><!-- /.col -->
                    </div><!-- /form-group -->
                </form>
            </div>
        </div><!-- /panel -->
    </div><!-- /.col -->
</div>

@section scripts{
    <script type="text/javascript">
        $(".chosen-select").chosen(
            )
    </script>
}
