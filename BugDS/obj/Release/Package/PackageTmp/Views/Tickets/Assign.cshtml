@model BugDS.Models.AssignUserToTicketViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    <div class="login-wrapper">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">Assign Developer to Ticket</div>
                <div class="panel-body">
                    <form action="@Url.Action("Assign","Tickets")" method="post" class="form-horizontal">
                        @Html.HiddenFor(m => m.Ticket.Id)
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Name</label>
                            <div class="col-lg-10">
                                @Html.DisplayFor(m => m.Ticket.Name)
                            </div><!-- /.col -->
                        </div><!-- /form-group -->
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Roles</label>
                            <div class="col-lg-10">
                                @Html.DropDownListFor(m => m.Ticket.AssigneeUserId, Model.Users, htmlAttributes: new { @class = "form-control" })
                                @*@Html.ListBoxFor(m => m.Ticket.AssigneeUserId, Model.Users, new { @class = "chosen-select" })*@
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-success btn-sm">Update</button>
                            </div><!-- /.col -->
                        </div><!-- /form-group -->
                    </form>
                </div>
            </div><!-- /panel -->
        </div><!-- /.col -->
    </div>
</body>


@section scripts{
    <script type="text/javascript">
        $(".chosen-select").chosen(
            )
    </script>
}

