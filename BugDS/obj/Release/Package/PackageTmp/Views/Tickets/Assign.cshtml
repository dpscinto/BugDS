@model BugDS.Models.AssignUserToTicketViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <br />
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <div class="panel-heading">Assign Developer to Ticket</div>
            <div class="panel-body">
                <form action="@Url.Action("Assign","Tickets")" method="post" class="form-horizontal">
                    @Html.HiddenFor(m => m.Ticket.Id)
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Name</label>
                        <div class="col-lg-9">
                            @Html.DisplayFor(m => m.Ticket.Name)
                        </div><!-- /.col -->
                    </div><!-- /form-group -->
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Roles</label>
                        <div class="col-lg-9">
                            @Html.DropDownListFor(m => m.Ticket.AssigneeUserId, Model.Users, htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-4 col-lg-10">
                            <button type="submit" class="btn btn-success">Update</button>
                            @Html.ActionLink("Cancel", "Index", "Tickets", null, new { @class = "btn btn-danger" })
                        </div><!-- /.col -->
                    </div><!-- /form-group -->
                </form>
            </div>
        </div><!-- /panel -->
    </div><!-- /.col -->
</div>


@section scripts{
    <script type="text/javascript">
        $(".chosen-select").chosen(
            )
    </script>
}

