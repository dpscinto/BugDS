@model IEnumerable<BugDS.Models.ApplicationUser>

<body>
    <div class="container">
        <div class="row">
            <h2>
                User Manager
            </h2>
        </div>
    </div>
    <hr />
    <div class="panel panel-default table-responsive">
        <div class="padding-md clearfix">
            <table class="table table-striped" id="dataTable">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>
                                @Html.ActionLink("Update Roles", "EditUserRole", "Admin",new { id = item.Id },null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>

@section scripts{
    <script>
        $('#dataTable').DataTable({
        });
    </script>
}